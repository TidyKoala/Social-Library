{% extends 'SocialLibraryBaseBundle::base.html.twig' %}

{% block localeSwitcher %}
    {{ locale_switcher('manga_show', {'id': entity.id, 'nameSlug':entity.nameSlug }) }}
{% endblock %}

{% block title %}
    {{ parent() }} - {% trans %}manga_section_title{% endtrans %} - {{ entity.volume ~ '/' ~ entity.name ~ '/' ~ entity.serie }}
{% endblock %}

{% block body %}
<h1>{{ entity.volume ~ ' - ' ~ entity.name ~ ' - ' ~ entity.serie }}</h1>

{% for flashMessage in app.session.flashbag.get('success') %}
    <div class="alert alert-success">
        {{ flashMessage }}
    </div>
{% endfor %}

<div class="record_properties row-fluid">
	<div class="media">
		<div class="object-cover pull-left well">
		{% if entity.picture is not empty %}
	    	{% thumbnail entity.picture, 'big' with {'class': 'media-object'} %}
		{% endif %}
		</div>
		<div class="media-body">
			<table class="object-full-description table table-striped table-bordered">
			    <tbody>
			        <tr>
			            <th>{% trans %}link_book_header_volume{% endtrans %}</th>
			            <td>{{ entity.volume }}</td>
			        </tr>
			        <tr>
			            <th>{% trans %}link_book_header_name{% endtrans %}</th>
			            <td>{{ entity.name }}</td>
			        </tr>
			        <tr>
			            <th>{% trans %}link_book_header_serie{% endtrans %}</th>
			            <td>{{ entity.serie }}</td>
			        </tr>
			        <tr>
			            <th>{% trans %}link_book_header_authors{% endtrans %}</th>
			            <td>{{ entity.creators|join(', ') }}</td>
			        </tr>
			        <tr>
			            <th>{% trans %}link_book_header_illustrators{% endtrans %}</th>
			            <td>{{ entity.illustrators|join(', ') }}</td>
			        </tr>
			        <tr>
			            <th>{% trans %}link_book_header_language{% endtrans %}</th>
			            <td>{{ entity.language | language() }}</td>
			        </tr>
			        <tr>
			            <th>{% trans %}link_book_header_isbn10{% endtrans %}</th>
			            <td>{{ entity.isbn10 }}</td>
			        </tr>
			        <tr>
			            <th>{% trans %}link_book_header_isbn13{% endtrans %}</th>
			            <td>{{ entity.isbn13 }}</td>
			        </tr>
			    </tbody>
			</table>
		</div>
	</div>
</div>

{% endblock %}

{% block secondMenu %}
<ul class="record_actions nav nav-pills nav-stacked">
    <li>
        <a href="{{ path('manga_index') }}">
            <i class="icon-back"></i> {% trans %}link_book_back_list{% endtrans %}
        </a>
    </li>
    {% if is_granted('ROLE_USER') %}
    <li>
        <a href="{{ path('manga_index', {'selection' : 'my'}) }}">
            {% trans %}link_book_back_owner_list{% endtrans %}
        </a>
    </li>
            {% if entity.isOwner(app.user) %}
    <li>
        <a href="{{ path('manga_edit', { 'id': entity.id, 'nameSlug': entity.nameSlug }) }}">
            <i class="icon-pencil"></i> {% trans %}link_book_edit{% endtrans %}
        </a>
    </li>
    <li>
        <a href="{{ path('manga_remove_owner', { 'id': entity.id, 'nameSlug': entity.nameSlug }) }}">
            <i class="icon-logout"></i> {% trans %}link_book_remove_owner{% endtrans %}
        </a>
    </li>
            {% else %}
    <li>
        <a href="{{ path('manga_add_owner', { 'id': entity.id, 'nameSlug': entity.nameSlug }) }}">
            <i class="icon-login"></i> {% trans %}link_book_add_owner{% endtrans %}
        </a>
    </li>
            {% endif %}
    {% endif %}
</ul>
{% endblock %}