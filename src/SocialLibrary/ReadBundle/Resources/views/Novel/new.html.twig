{% extends 'SocialLibraryBaseBundle::base.html.twig' %}

{% block title %}
    {{ parent() }} - {% trans %}novel_section_title{% endtrans %} - {% trans %}novel_add_title{% endtrans %}
{% endblock %}

{% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/sociallibrarybase/css/bootstrap-jasny.min.css') }}">
{% endblock %}

{% block secondMenu %}
<ul class="record_actions nav nav-pills nav-stacked">
    <li>
        <a href="{{ path('novel_index') }}">
            <i class="icon-back"></i> {% trans %}link_book_back_list{% endtrans %}
        </a>
    </li>
    <li>
        <a href="{{ path('novel_index', {'selection' : 'my'}) }}">
            {% trans %}link_book_back_owner_list{% endtrans %}
        </a>
    </li>
</ul>
{% endblock %}

{% block body %}
<h1>{% trans %}novel_add_title{% endtrans %}</h1>

<form action="{{ path('novel_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    {% include 'SocialLibraryReadBundle:Common:form.html.twig' with {'form': form} %}
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">
            {% trans %}label_book_create{% endtrans %}
        </button>
    </div>
</form>

{% endblock %}

{% block javascripts %}
        <script src="{{ asset('bundles/sociallibrarybase/js/bootstrap-jasny.min.js') }}"></script>
        <script src="{{ asset('bundles/sociallibrarybase/js/ajax-select-submit.js') }}"></script>
        <script type="text/javascript">
            
            $(document).ready(function() {
                $('.tooltip-icon').tooltip();
                //$('.add-ajax').popover();
                $('.add-ajax').click(function() {
                    return ajaxGetForm($(this));
                });
            });
        </script>
{% endblock %}