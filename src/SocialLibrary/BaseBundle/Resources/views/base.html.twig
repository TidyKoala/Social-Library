<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name=viewport" content="width=device-width, initial-scale=1.0" />
        <title>{% block title %}Social Library{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('bundles/sociallibrarybase/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/sociallibrarybase/css/fontello.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/sociallibrarybase/css/animation.css') }}"><!--[if IE 7]>
        <link rel="stylesheet" href="{{ asset('bundles/sociallibrarybase/css/fontello-ie7.css') }}"><![endif]-->
        <link rel="stylesheet" href="{{ asset('bundles/sociallibrarybase/css/style.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="container-fluid">
            <div id="main_menu">
                <div class="navbar">
                    <div class="navbar-inner">
                        <div class="container">
                            <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
                            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </a>
                            <!-- Be sure to leave the brand out there if you want it shown -->
                            <a class="brand" href="{{ path('_welcome') }}">Social Library</a>
                            <!-- Everything you want hidden at 940px or less, place within here -->
                            <div class="nav-collapse collapse">
                                <ul class="nav ">
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                            {% trans %}link_library_sections{% endtrans %}
                                            <b class="caret"></b>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a href="{{ path('manga_index') }}">{% trans %}manga_section_link{% endtrans %}</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('graphic_novel_index') }}">{% trans %}graphic_novel_section_link{% endtrans %}</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('novel_index') }}">{% trans %}novel_section_link{% endtrans %}</a>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                                <ul class="nav pull-right">
                                    <li>
                                    {% if is_granted('ROLE_USER') %}
                                        <a href="{{ path('fos_user_security_logout') }}">{% trans %}logout_link{% endtrans %}</a>
                                    {% else %}
                                        <a href="{{ path('fos_user_security_login') }}">{% trans %}login_link{% endtrans %}</a>
                                    {% endif %}
                                    </li>
                                </ul>
                                <ul class="nav pull-right">
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                            {% trans %}locale_selecter_label{% endtrans %}
                                            <b class="caret"></b>
                                        </a>
                                        <ul class="dropdown-menu">
                                            {{ locale_switcher() }}
                                        </ul>
                                    </li>
                                </ul>
                            <!-- .nav, .navbar-search, .navbar-form, etc -->
                            </div>
                         
                        </div>
                    </div>
                </div>
                {% block mainMenu %}{% endblock %}
            </div>
            <div id="content"> 
                <div class="row-fluid">
                {% block content %}
                    <div class="span2 secondary-menu">
                        {% block secondMenu %}{% endblock %}
                    </div>
                    <div class="span10">
                        {% block body %}{% endblock %}
                    </div>
                {% endblock content %}
                </div>
            </div>
        </div>
        <script src="{{ asset('bundles/sociallibrarybase/js/jquery-1.8.3.min.js') }}"></script>
        <script src="{{ asset('bundles/sociallibrarybase/js/bootstrap.min.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
