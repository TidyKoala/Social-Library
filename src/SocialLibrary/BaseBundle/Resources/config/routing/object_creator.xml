<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="object_creator_ajax_new" pattern="/{_locale}/ajax-new">
        <default key="_controller">SocialLibraryBaseBundle:ObjectCreator:newAjax</default>
        <default key="_locale">en</default>
    </route>

    <route id="object_creator_ajax_create" pattern="/{_locale}/ajax-create">
        <default key="_controller">SocialLibraryBaseBundle:ObjectCreator:createAjax</default>
        <default key="_locale">en</default>
        <default key="_format">json</default>
        <requirement key="_format">xml|json</requirement>
        <requirement key="_method">POST</requirement>
    </route>

</routes>