{% extends 'SocialLibraryReadableMediaMangaBundle:Manga:index.html.twig' %}

{% block list %}
<table class="records_list table table-striped table-bordered table-hover">
    <thead>
    	<tr>
    		<th>
                {% trans %}manga_header_volume{% endtrans %}
    		</th>
            <th>
                {% trans %}manga_header_actions{% endtrans %}
            </th>
    	</tr>
    </thead>
    <tbody>
    {% for entity in entities %}
     	<tr>
     		<td>
         		<div class="media">
                    <a class="pull-left span3" href="{{ path('manga_show', {'id': entity.id, 'nameSlug': entity.nameSlug }) }}">
                    {% if entity.picture is empty %}
                        <img class="media-object" src="{{ asset('bundles/sociallibrarybase/img/unknown-manga.png') }}" alt="{{ entity.name }}">
                    {% else %}
                        {% thumbnail entity.picture, 'small' %}
                    {% endif %}
                    </a>
                    <div class="media-body">
                        <h5 class="media-heading">
                            <a href="{{ path('manga_show', {'id': entity.id, 'nameSlug': entity.nameSlug }) }}">
                                {{ entity.volume }} - {{ entity.name }}
                            </a>
                        </h5>
                        <p>{{ entity.serie }}</p>
                        <p>{{ entity.creators|join(', ') }}</p>
                    </div>
         		</div>
 		    </td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('manga_show', { 'id': entity.id, 'nameSlug': entity.nameSlug }) }}"><i class="icon-eye"></i> {% trans %}manga_details{% endtrans %}</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        {% if entity.isOwner(app.user) %}
                    <li>
                        <a href="{{ path('manga_edit', { 'id': entity.id, 'nameSlug': entity.nameSlug }) }}"><i class="icon-pencil"></i> {% trans %}manga_edit{% endtrans %}</a>
                    </li>
                    <li>
                        <a href="{{ path('manga_remove_owner', { 'id': entity.id, 'nameSlug': entity.nameSlug }) }}"><i class="icon-logout"></i> {% trans %}manga_delete{% endtrans %}</a>
                    </li>
                        {% else %}
                    <li>
                        <a href="{{ path('manga_add_owner', { 'id': entity.id, 'nameSlug': entity.nameSlug }) }}"><i class="icon-login"></i> {% trans %}manga_own{% endtrans %}</a>
                    </li>
                        {% endif %}
                    {% endif %}
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{{ entities.render()|raw }}

{% endblock %}