<h1>Manga</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>{% trans %}manga_header_volume{% endtrans %}</th>
            <td>{{ entity.volume }}</td>
        </tr>
        <tr>
            <th>{% trans %}manga_header_name{% endtrans %}</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>{% trans %}manga_header_serie{% endtrans %}</th>
            <td>{{ entity.serie }}</td>
        </tr>
        <tr>
            <th>{% trans %}manga_header_authors{% endtrans %}</th>
            <td>{{ entity.creators|join(', ') }}</td>
        </tr>
        <tr>
            <th>{% trans %}manga_header_illustrators{% endtrans %}</th>
            <td>{{ entity.illustrators|join(', ') }}</td>
        </tr>
        <tr>
            <th>{% trans %}manga_header_language{% endtrans %}</th>
            <td>{{ entity.language }}</td>
        </tr>
        <tr>
            <th>{% trans %}manga_header_isbn10{% endtrans %}</th>
            <td>{{ entity.isbn10 }}</td>
        </tr>
        <tr>
            <th>{% trans %}manga_header_isbn13{% endtrans %}</th>
            <td>{{ entity.isbn13 }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('manga') }}">
            {% trans %}manga_back_list{% endtrans %}
        </a>
    </li>
    {% if is_granted('ROLE_ADMIN') %}
    <li>
        <a href="{{ path('manga_edit', { 'id': entity.id, 'nameSlug': entity.nameSlug }) }}">
            {% trans %}manga_edit{% endtrans %}
        </a>
    </li>
    <li>
        <a href="{{ path('manga_add_owner', { 'id': entity.id, 'nameSlug': entity.nameSlug }) }}">
            {% trans %}manga_own{% endtrans %}
        </a>
    </li>
    <li>
        <a href="{{ path('manga_remove_owner', { 'id': entity.id, 'nameSlug': entity.nameSlug }) }}">
            {% trans %}manga_delete{% endtrans %}
        </a>
    </li>
    {% endif %}
</ul>
