<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="manga_index" pattern="/{_locale}/index/{view}/{selection}">
        <default key="_controller">SocialLibraryReadableMediaMangaBundle:Manga:index</default>
        <default key="_locale">en</default>
        <default key="view">list</default>
        <default key="selection">all</default>
        <requirement key="view">list|listThumbs|thumbnails</requirement>
    </route>

    <route id="manga_show" pattern="/{_locale}/show/{id}/{nameSlug}">
        <default key="_controller">SocialLibraryReadableMediaMangaBundle:Manga:show</default>
        <default key="_locale">en</default>
        <requirement key="id">\d+</requirement>
    </route>

    <route id="manga_new" pattern="/{_locale}/new">
        <default key="_controller">SocialLibraryReadableMediaMangaBundle:Manga:new</default>
        <default key="_locale">en</default>
    </route>

    <route id="manga_create" pattern="/{_locale}/create">
        <default key="_controller">SocialLibraryReadableMediaMangaBundle:Manga:create</default>
        <default key="_locale">en</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="manga_edit" pattern="/{_locale}/edit/{id}/{nameSlug}">
        <default key="_controller">SocialLibraryReadableMediaMangaBundle:Manga:edit</default>
        <default key="_locale">en</default>
        <requirement key="id">\d+</requirement>
    </route>

    <route id="manga_update" pattern="/{_locale}/update/{id}">
        <default key="_controller">SocialLibraryReadableMediaMangaBundle:Manga:update</default>
        <default key="_locale">en</default>
        <requirement key="id">\d+</requirement>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="manga_add_owner" pattern="/{_locale}/add/{id}/{nameSlug}">
        <default key="_controller">SocialLibraryReadableMediaMangaBundle:Manga:addOwner</default>
        <default key="_locale">en</default>
        <requirement key="id">\d+</requirement>
    </route>

    <route id="manga_remove_owner" pattern="/{_locale}/remove/{id}/{nameSlug}">
        <default key="_controller">SocialLibraryReadableMediaMangaBundle:Manga:removeOwner</default>
        <default key="_locale">en</default>
        <requirement key="id">\d+</requirement>
    </route>

</routes>