{% extends "AcmeDemoBundle::layout.html.twig" %}

{% block title "Symfony - Posts" %}

{% block content_header '' %}

{% block content %}
    <h1>Available posts</h1>
    
    <table>
	    <thead>
	    	<tr>
	    		<th>id</th>
	    		<th>{{ pagination.sortable('Title', 'p.title')|raw }}</th>
	    		<th>title slug</th>
	    		<th>{{ pagination.sortable('Created', 'p.created')|raw }}</th>
	    		<th>{{ pagination.sortable('Updated', 'p.updated')|raw }}</th>
	    	</tr>
	    </thead>
	    <tbody>
	    {% for entity in pagination %}
	     	<tr>
	     		<td>{{ entity.id }}</td>
	     		<td>{{ entity.title }}</td>
	     		<td>{{ entity.titleSlug }}</td>
	     		<td>{{ entity.created|date("d/m/Y H:i:s") }}</td>
	     		<td>{{ entity.updated|date("d/m/Y H:i:s") }}</td>
	    {% endfor %}
	    </tbody>
    </table>
    {{ pagination.render()|raw }}
{% endblock %}